<div class="container">
  <div class="row" id="heading" >
        <h1 style="font-family: ""Comic Sans MS"", cursive, sans-serif;" >Your To Do List</h1>
        <div class="row" id=input>
            <%=render(:partial => 'dashboard/new') %>
            <br>
            <br>
        </div>
    </div>
        <div class="row" id="table_div" >
            <table id="to_do_list">
                <thead>
                  <tr>
                    <th>Description</th>
                    <th>Days to Completion</th>
                    <th>Mark as Complete</th>
                  </tr>
                </thead>
                <tbody>
                  <% @items.each do |item| %>
                    <tr>
                      <td><%= item.description %></td>
                      <% @days_left = distance_of_time_in_words_to_now(item.completion_date) %>
                      <td><%= @days_left %></td>
                      <td><%= link_to "", item_toggle_path(item), method: :put, class: 'glyphicon glyphicon-ok' %></td>
                    </tr>
                  <% end %>
                </tbody>
            </table>
        </div>
        
</div>
