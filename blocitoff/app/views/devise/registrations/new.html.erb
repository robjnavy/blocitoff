<div class="hold-transition login-page">
  <div class="login-box" style="max-width: 500px;" id="login-box">
    <div class="login-logo">
      <a href="#"><h2><b>B</b>loc<b>I</b>t<b>O</b>ff</h2></a>
    </div>
    <div class="login-box-body">
      <h3 class="login-box-msg">Sign up</h3>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group has-feedback">
        <%= f.label :email, class: 'sr-only' %><br />
        <%= f.email_field :email, autofocus: true, placeholder: 'user@domain.com', class: 'form-control' %>
        <span class="fa fa-envelope form-control-feedback"></span>
      </div>

      <div class="field">
        <%= f.label :password, class: 'sr-only' %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", placeholder: 'password', class: 'form-control' %>
        <span class="fa fa-lock form-control-feedback"></span>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: 'sr-only' %><br />
        <%= f.password_field :password, autocomplete: "off", placeholder: 'password', class: 'form-control' %>
        <span class="fa fa-lock form-control-feedback"></span>
      </div>
      <br>

          <div class="col-xs-4">
            <div class="actions">
              <%= f.submit "Sign Up", class: 'btn btn-primary btn-block btn-flat' %>
            </div>
          </div>
      <%end%>
  </div>
</div>
